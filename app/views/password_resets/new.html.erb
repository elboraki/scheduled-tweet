<div class="container">
  <h4>Reset password</h4>
  <%= form_with  url: password_reset_path ,local: true do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email ,class: "form-control" %>
    </div>
    <div class="form-group mt-1">
      <%= form.submit "send " ,class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
